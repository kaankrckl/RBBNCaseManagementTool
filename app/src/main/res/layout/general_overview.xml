<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D1F21"
        android:paddingLeft="15dp"
        android:textColor="#ff3399"
        android:text="GENERAL OVERVIEW"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Critical"
                android:id="@+id/btnE1Cases"
                android:drawableBottom="@drawable/ic_fire"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="E2"
                android:id="@+id/btnE2Cases"
                android:drawableBottom="@drawable/ic_attach"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="E1 FOLLOW-UP"
                android:id="@+id/btnOutFollow"
                android:drawableBottom="@drawable/ic_follow"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ESCALATED"
                android:id="@+id/btnEscalated"
                android:drawableBottom="@drawable/ic_escalated"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BC CASES"
                android:id="@+id/btnBCCases"
                android:drawableBottom="@drawable/ic_business"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="HOT LIST"
                android:id="@+id/btnHotIssues"
                android:drawableBottom="@drawable/ic_flash"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>